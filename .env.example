# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Base URL for generating redirect URLs (used in logs/debugging)
BASE_URL=https://your-domain.com

# Security
# Secret key for signing codes (generate with: openssl rand -base64 32)
CODE_SIGNING_SECRET=your-secret-key-here-min-32-chars

# Storage
# Path to SQLite database file (not used on Vercel)
SQLITE_PATH=./data/telegram-redirect.db
# Set to "true" to use in-memory storage (auto-enabled on Vercel)
USE_MEMORY_STORAGE=false

# Code Resolution Settings
# Set to "true" to delete codes after first resolution (one-time use)
ONE_TIME_CODES=false

# Rate Limiting
# Max requests per minute for /r/:code endpoint
RESOLVE_RATE_LIMIT=60

# Logging
LOG_LEVEL=info

# Optional: IP hashing salt for privacy
IP_HASH_SALT=your-ip-hash-salt-here
